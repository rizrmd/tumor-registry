# INAMSOS Production Environment Configuration
# Indonesian Musculoskeletal Tumor Registry
# Copy this file to backend/.env.production and fill in actual values

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=3001
APP_NAME=INAMSOS Tumor Registry
APP_VERSION=1.0.0

# Frontend Build Variables
NEXT_PUBLIC_API_URL=https://inamsos.medxamion.com/api/v1
NEXT_PUBLIC_APP_NAME=INAMSOS
NEXT_PUBLIC_VERSION=1.0.0

# ==========================================
# DATABASE CONFIGURATION (External PostgreSQL)
# ==========================================
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=disable
DATABASE_HOST=your-db-host.example.com
DATABASE_PORT=5432
DATABASE_NAME=inamsos
DATABASE_USER=inamsos
DATABASE_PASSWORD=your-db-password-here
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ==========================================
# JWT AUTHENTICATION
# ==========================================
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
ENCRYPTION_KEY=your-encryption-key-min-32-chars
ENCRYPTION_MASTER_KEY=your-master-encryption-key-min-32-chars
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-min-32-chars

# ==========================================
# EMAIL CONFIGURATION (SMTP) - OPTIONAL
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@inamsos.medxamion.com

# ==========================================
# FILE STORAGE CONFIGURATION (Local Docker Volume)
# ==========================================
STORAGE_TYPE=local
STORAGE_PATH=/var/lib/inamsos/uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,dicom

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
BACKUP_STORAGE_PATH=/var/lib/inamsos/backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-min-32-chars
BACKUP_RETENTION_DAYS=90

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=info
LOG_FILE=/var/log/inamsos/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ORIGIN=https://inamsos.medxamion.com
CORS_CREDENTIALS=true

# ==========================================
# API DOCUMENTATION
# ==========================================
API_DOCS_ENABLED=false
SWAGGER_ENABLED=false

# ==========================================
# CACHE CONFIGURATION (In-Memory)
# ==========================================
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# ==========================================
# REPORT GENERATION
# ==========================================
REPORTS_TEMP_PATH=/tmp/inamsos-reports
REPORTS_RETENTION_DAYS=7

# ==========================================
# EXTERNAL INTEGRATIONS
# ==========================================
INTEGRATION_TIMEOUT=30000
INTEGRATION_RETRY_ATTEMPTS=3

# ==========================================
# DATA EXPORT/IMPORT
# ==========================================
EXPORT_TEMP_PATH=/tmp/inamsos-exports
IMPORT_TEMP_PATH=/tmp/inamsos-imports
EXPORT_RETENTION_DAYS=3

# ==========================================
# PRODUCTION SETTINGS
# ==========================================
DEBUG=false
VERBOSE_LOGGING=false
ERROR_TRACKING=true
PERFORMANCE_PROFILING=false

# ==========================================
# LOAD BALANCER / REVERSE PROXY
# ==========================================
BEHIND_PROXY=true
TRUST_PROXY=1

# ==========================================
# HEALTH CHECKS
# ==========================================
HEALTH_CHECK_CRITICAL_TIMEOUT=5000
HEALTH_CHECK_WARNING_TIMEOUT=2000

# ==========================================
# EXTERNAL SERVICE URLS
# ==========================================
EXTERNAL_API_URL=https://inamsos.medxamion.com
FRONTEND_URL=https://inamsos.medxamion.com
ADMIN_URL=https://admin.inamsos.medxamion.com

# ==========================================
# TIMEZONE
# ==========================================
TZ=Asia/Jakarta
