# Backend Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3001
APP_NAME=INAMSOS Tumor Registry
APP_VERSION=1.0.0

# ============================================
# Database Configuration (External PostgreSQL)
# ============================================
# Example: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://username:password@external-host:5432/inamsos_prod
DATABASE_HOST=external-host
DATABASE_PORT=5432
DATABASE_NAME=inamsos_prod
DATABASE_USER=username
DATABASE_PASSWORD=your-secure-password
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# JWT Configuration
# ============================================
# Generate secure random keys for production
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# Security Configuration
# ============================================
ENCRYPTION_KEY=your-32-character-encryption-key-here
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-minimum-32-characters

# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@medxamion.com

# ============================================
# File Storage (Local Docker Volume)
# ============================================
STORAGE_TYPE=local
STORAGE_PATH=/var/lib/inamsos/uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,dicom

# ============================================
# Backup Configuration
# ============================================
BACKUP_STORAGE_PATH=/var/lib/inamsos/backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-minimum-32-characters
BACKUP_RETENTION_DAYS=90

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FILE=/var/log/inamsos/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ============================================
# Monitoring Configuration
# ============================================
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=https://inamsos.medxamion.com
CORS_CREDENTIALS=true

# ============================================
# API Documentation
# ============================================
API_DOCS_ENABLED=false
SWAGGER_ENABLED=false

# ============================================
# Cache Configuration (In-Memory)
# ============================================
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# ============================================
# Report Generation
# ============================================
REPORTS_TEMP_PATH=/tmp/inamsos-reports
REPORTS_RETENTION_DAYS=7

# ============================================
# External Integrations
# ============================================
INTEGRATION_TIMEOUT=30000
INTEGRATION_RETRY_ATTEMPTS=3

# ============================================
# Data Export/Import
# ============================================
EXPORT_TEMP_PATH=/tmp/inamsos-exports
IMPORT_TEMP_PATH=/tmp/inamsos-imports
EXPORT_RETENTION_DAYS=3

# ============================================
# Production Settings
# ============================================
DEBUG=false
VERBOSE_LOGGING=false
ERROR_TRACKING=true
PERFORMANCE_PROFILING=false

# ============================================
# Load Balancer / Reverse Proxy
# ============================================
BEHIND_PROXY=true
TRUST_PROXY=1

# ============================================
# Health Checks
# ============================================
HEALTH_CHECK_CRITICAL_TIMEOUT=5000
HEALTH_CHECK_WARNING_TIMEOUT=2000

# ============================================
# External Service URLs
# ============================================
EXTERNAL_API_URL=https://inamsos.medxamion.com
FRONTEND_URL=https://inamsos.medxamion.com
ADMIN_URL=https://admin.inamsos.medxamion.com
